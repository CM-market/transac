  },
  "components": {
    "schemas": {
      "CreateProductRequest": {
        "type": "object",
        "required": [
          "name",
          "image_ids",
          "price",
          "quantity_available",
          "category",
          "return_policy"
        ],
        "properties": {
          "category": {
            "type": "string"
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "image_ids": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            }
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "quantity_available": {
            "type": "integer",
            "format": "int32"
          },
          "return_policy": {
            "type": "string"
          },
          "sku": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "CreateReviewRequest": {
        "type": "object",
        "required": [
          "user_id",
          "rating",
          "comment"
        ],
        "properties": {
          "comment": {
            "type": "string"
          },
          "rating": {
            "type": "integer",
            "format": "int32"
          },
          "user_id": {
            "$ref": "#/components/schemas/Uuid"
          }
        }
      },
      "CreateStoreRequest": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "contact_phone": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "location": {
            "type": "string",
            "nullable": true
          },
          "name": {
            "type": "string"
          }
        }
      },
      "HealthResponse": {
        "type": "object",
        "required": [
          "message"
        ],
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "ListProductsQuery": {
        "type": "object",
        "properties": {
          "store_id": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          }
        }
      },
      "MediaUploadResponse": {
        "type": "object",
        "required": [
          "image_id",
          "s3_key"
        ],
        "properties": {
          "image_id": {
            "type": "string",
            "format": "uuid"
          },
          "s3_key": {
            "type": "string"
          }
        }
      },
      "Model": {
        "type": "object",
        "required": [
          "id",
          "product_id",
          "user_id",
          "rating",
          "comment",
          "created_at"
        ],
        "properties": {
          "comment": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "product_id": {
            "type": "string",
            "format": "uuid"
          },
          "rating": {
            "type": "integer",
            "format": "int32"
          },
          "user_id": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "PowCertificateRequest": {
        "type": "object",
        "description": "Proof of Work request for certificate issuance",
        "required": [
          "solution",
          "public_key",
          "client_id"
        ],
        "properties": {
          "client_id": {
            "type": "string"
          },
          "public_key": {
            "type": "string"
          },
          "solution": {
            "$ref": "#/components/schemas/PowSolution"
          }
        }
      },
      "PowChallenge": {
        "type": "object",
        "description": "Proof of Work challenge",
        "required": [
          "challenge_id",
          "challenge_data",
          "difficulty",
          "expires_at",
          "created_at"
        ],
        "properties": {
          "challenge_data": {
            "type": "string"
          },
          "challenge_id": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "difficulty": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          },
          "expires_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "PowChallengeResponse": {
        "type": "object",
        "description": "Response for PoW challenge request",
        "required": [
          "challenge_id",
          "challenge_data",
          "difficulty",
          "expires_at"
        ],
        "properties": {
          "challenge_data": {
            "type": "string"
          },
          "challenge_id": {
            "type": "string"
          },
          "difficulty": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          },
          "expires_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "PowSolution": {
        "type": "object",
        "description": "Proof of Work solution",
        "required": [
          "challenge_id",
          "nonce",
          "hash"
        ],
        "properties": {
          "challenge_id": {
            "type": "string"
          },
          "hash": {
            "type": "string"
          },
          "nonce": {
            "type": "integer",
            "format": "int64",
            "minimum": 0
          }
        }
      },
      "Store": {
        "$ref": "#/components/schemas/crate.entity.store.Model"
      },
      "StoreResponse": {
        "type": "object",
        "required": [
          "store"
        ],
        "properties": {
          "store": {
            "$ref": "#/components/schemas/Store"
          }
        }
      },
      "StoreShareResponse": {
        "type": "object",
        "required": [
          "store_id",
          "share_url",
          "whatsapp_share_url"
        ],
        "properties": {
          "share_url": {
            "type": "string"
          },
          "store_id": {
            "type": "string"
          },
          "whatsapp_share_url": {
            "type": "string"
          }
        }
      },
      "StoresListResponse": {
        "type": "object",
        "required": [
          "stores"
        ],
        "properties": {
          "stores": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Store"
            }
          }
        }
      },
      "TokenResponse": {
        "type": "object",
        "description": "Response for PoW verification (token only)",
        "required": [
          "token"
        ],
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "UpdateProductRequest": {
        "type": "object",
        "required": [
          "name",
          "image_ids",
          "price",
          "quantity_available",
          "category",
          "return_policy"
        ],
        "properties": {
          "category": {
            "type": "string"
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "image_ids": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            }
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "quantity_available": {
            "type": "integer",
            "format": "int32"
          },
          "return_policy": {
            "type": "string"
          },
          "sku": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "UpdateStoreRequest": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "contact_phone": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "location": {
            "type": "string",
            "nullable": true
          },
          "name": {
            "type": "string"
          }
        }
      },
      "VerificationRequest": {
        "type": "object",
        "description": "Request for PoW verification",
        "required": [
          "solution",
          "public_key",
          "relay_id"
        ],
        "properties": {
          "public_key": {
            "type": "string"
          },
          "relay_id": {
            "type": "string"
          },
          "solution": {
            "$ref": "#/components/schemas/PowSolution"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "System",
      "description": "System health and status endpoints"
    },
    {
      "name": "POW",
      "description": "Proof of Work authentication endpoints"
    },
    {
      "name": "Products",
      "description": "Product management endpoints"
    },
    {
      "name": "Stores",
      "description": "Store management endpoints"
    }
  ]
}
