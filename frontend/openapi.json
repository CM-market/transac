{
  "openapi": "3.0.3",
  "info": {
    "title": "transac",
    "description": "",
    "license": { "name": "" },
    "version": "0.1.0"
  },
  "servers": [
    { "url": "http://localhost:3001", "description": "Local server" }
  ],
  "paths": {
    "/api/v1/pow/challenge": {
      "post": {
        "tags": ["crate"],
        "operationId": "get_pow_challenge",
        "responses": {
          "200": {
            "description": "POW challenge",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PowChallengeResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/pow/verify": {
      "post": {
        "tags": ["crate"],
        "operationId": "verify_pow_solution",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/VerificationRequest" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "POW solution verified",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/TokenResponse" }
              }
            }
          },
          "422": { "description": "Invalid solution" }
        }
      }
    },
    "/healthz": {
      "get": {
        "tags": ["System"],
        "summary": "Health check endpoint",
        "operationId": "healthz",
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HealthResponse" }
              }
            }
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": ["Products"],
        "summary": "List products by store ID",
        "operationId": "list_products",
        "parameters": [
          {
            "name": "store_id",
            "in": "query",
            "description": "Store ID to filter products",
            "required": true,
            "schema": { "$ref": "#/components/schemas/UuidSchema" }
          }
        ],
        "responses": {
          "200": {
            "description": "Products found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Model" }
                }
              }
            }
          },
          "400": { "description": "Bad request - invalid store ID" }
        }
      },
      "post": {
        "tags": ["Products"],
        "summary": "Create a new product",
        "operationId": "create_product",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateProductRequest" }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Product created successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Model" }
              }
            }
          },
          "400": { "description": "Bad request - invalid data" }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "tags": ["Products"],
        "summary": "Get a product by ID",
        "operationId": "get_product",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Product ID",
            "required": true,
            "schema": { "$ref": "#/components/schemas/UuidSchema" }
          }
        ],
        "responses": {
          "200": {
            "description": "Product found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Model" }
              }
            }
          },
          "404": { "description": "Product not found" }
        }
      },
      "put": {
        "tags": ["Products"],
        "summary": "Update a product by ID",
        "operationId": "update_product",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Product ID",
            "required": true,
            "schema": { "$ref": "#/components/schemas/UuidSchema" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UpdateProductRequest" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Product updated successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Model" }
              }
            }
          },
          "400": { "description": "Bad request - invalid data" },
          "404": { "description": "Product not found" }
        }
      },
      "delete": {
        "tags": ["Products"],
        "summary": "Delete a product by ID",
        "operationId": "delete_product",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Product ID",
            "required": true,
            "schema": { "$ref": "#/components/schemas/UuidSchema" }
          }
        ],
        "responses": {
          "204": { "description": "Product deleted successfully" },
          "400": { "description": "Bad request - invalid data" },
          "404": { "description": "Product not found" }
        }
      }
    },
    "/products/{id}/media": {
      "post": {
        "tags": ["Products"],
        "summary": "Upload media for a product",
        "operationId": "upload_product_media",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Product ID",
            "required": true,
            "schema": { "$ref": "#/components/schemas/UuidSchema" }
          }
        ],
        "requestBody": {
          "content": { "text/plain": { "schema": { "type": "string" } } },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Media uploaded successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MediaUploadResponse" }
              }
            }
          },
          "400": {
            "description": "Bad request - invalid image or analysis failed"
          },
          "404": { "description": "Product not found" },
          "500": { "description": "Internal server error - upload failed" }
        }
      },
      "put": {
        "tags": ["Products"],
        "summary": "Replace media for a product",
        "operationId": "edit_product_media",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Product ID",
            "required": true,
            "schema": { "$ref": "#/components/schemas/UuidSchema" }
          }
        ],
        "requestBody": {
          "content": { "text/plain": { "schema": { "type": "string" } } },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Media replaced successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MediaUploadResponse" }
              }
            }
          },
          "400": {
            "description": "Bad request - invalid image or analysis failed"
          },
          "404": { "description": "Product not found" },
          "500": { "description": "Internal server error - upload failed" }
        }
      },
      "delete": {
        "tags": ["Products"],
        "summary": "Delete media for a product",
        "operationId": "delete_product_media",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Product ID",
            "required": true,
            "schema": { "$ref": "#/components/schemas/UuidSchema" }
          }
        ],
        "responses": {
          "200": { "description": "Media deleted successfully" },
          "404": { "description": "Product not found" },
          "500": { "description": "Internal server error - deletion failed" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateProductRequest": {
        "type": "object",
        "required": [
          "store_id",
          "name",
          "image_id",
          "price",
          "quantity_available"
        ],
        "properties": {
          "description": { "type": "string", "nullable": true },
          "image_id": { "$ref": "#/components/schemas/UuidSchema" },
          "name": { "type": "string" },
          "price": { "type": "number", "format": "double" },
          "quantity_available": { "type": "integer", "format": "int32" },
          "sku": { "type": "string", "nullable": true },
          "store_id": { "$ref": "#/components/schemas/UuidSchema" }
        }
      },
      "HealthResponse": {
        "type": "object",
        "required": ["message"],
        "properties": { "message": { "type": "string" } }
      },
      "ListProductsQuery": {
        "type": "object",
        "required": ["store_id"],
        "properties": {
          "store_id": { "$ref": "#/components/schemas/UuidSchema" }
        }
      },
      "MediaUploadResponse": {
        "type": "object",
        "required": ["image_id", "s3_key"],
        "properties": {
          "image_id": { "$ref": "#/components/schemas/UuidSchema" },
          "s3_key": { "type": "string" }
        }
      },
      "Model": {
        "type": "object",
        "required": [
          "id",
          "store_id",
          "name",
          "image_id",
          "price",
          "quantity_available",
          "created_at"
        ],
        "properties": {
          "created_at": { "type": "string", "format": "date-time" },
          "description": { "type": "string", "nullable": true },
          "id": { "$ref": "#/components/schemas/UuidSchema" },
          "image_id": { "$ref": "#/components/schemas/UuidSchema" },
          "name": { "type": "string" },
          "price": { "type": "number", "format": "double" },
          "quantity_available": { "type": "integer", "format": "int32" },
          "sku": { "type": "string", "nullable": true },
          "store_id": { "$ref": "#/components/schemas/UuidSchema" }
        }
      },
      "PowCertificateRequest": {
        "type": "object",
        "description": "Proof of Work request for certificate issuance",
        "required": ["solution", "public_key", "client_id"],
        "properties": {
          "client_id": { "type": "string" },
          "public_key": { "type": "string" },
          "solution": { "$ref": "#/components/schemas/PowSolution" }
        }
      },
      "PowChallenge": {
        "type": "object",
        "description": "Proof of Work challenge",
        "required": [
          "challenge_id",
          "challenge_data",
          "difficulty",
          "expires_at",
          "created_at"
        ],
        "properties": {
          "challenge_data": { "type": "string" },
          "challenge_id": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" },
          "difficulty": { "type": "integer", "format": "int32", "minimum": 0 },
          "expires_at": { "type": "string", "format": "date-time" }
        }
      },
      "PowChallengeResponse": {
        "type": "object",
        "description": "Response for PoW challenge request",
        "required": [
          "challenge_id",
          "challenge_data",
          "difficulty",
          "expires_at"
        ],
        "properties": {
          "challenge_data": { "type": "string" },
          "challenge_id": { "type": "string" },
          "difficulty": { "type": "integer", "format": "int32", "minimum": 0 },
          "expires_at": { "type": "string", "format": "date-time" }
        }
      },
      "PowSolution": {
        "type": "object",
        "description": "Proof of Work solution",
        "required": ["challenge_id", "nonce", "hash"],
        "properties": {
          "challenge_id": { "type": "string" },
          "hash": { "type": "string" },
          "nonce": { "type": "integer", "format": "int64", "minimum": 0 }
        }
      },
      "TokenResponse": {
        "type": "object",
        "description": "Response for PoW verification (token only)",
        "required": ["token"],
        "properties": { "token": { "type": "string" } }
      },
      "UpdateProductRequest": {
        "type": "object",
        "required": ["name", "image_id", "price", "quantity_available"],
        "properties": {
          "description": { "type": "string", "nullable": true },
          "image_id": { "$ref": "#/components/schemas/UuidSchema" },
          "name": { "type": "string" },
          "price": { "type": "number", "format": "double" },
          "quantity_available": { "type": "integer", "format": "int32" },
          "sku": { "type": "string", "nullable": true }
        }
      },
      "UuidSchema": { "default": null, "nullable": true },
      "VerificationRequest": {
        "type": "object",
        "description": "Request for PoW verification",
        "required": ["solution", "public_key", "relay_id"],
        "properties": {
          "public_key": { "type": "string" },
          "relay_id": { "type": "string" },
          "solution": { "$ref": "#/components/schemas/PowSolution" }
        }
      }
    }
  },
  "tags": [
    { "name": "System", "description": "System health and status endpoints" },
    { "name": "POW", "description": "Proof of Work authentication endpoints" },
    { "name": "Products", "description": "Product management endpoints" }
  ]
}
